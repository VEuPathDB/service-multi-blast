{
  "$schema": "https://json-schema.org/draft-07/schema",
  "oneOf": [
    {
      "type": "string",
      "enum": ["yes", "no"]
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "level": {
          "type": "integer"
        },
        "window": {
          "type": "integer"
        },
        "linker": {
          "type": "integer"
        }
      },
      "required": [
        "level",
        "window",
        "linker"
      ]
    }
  ],
  "default": {
    "level": 20,
    "window": 64,
    "linker": 1
  }
}