{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "BlastX",
  "allOf": [
    {
      "$ref": "cli-config.json"
    },
    {
      "type": "object",
      "properties": {
        "tool": {
          "type": "string",
          "enum": ["blastx"]
        }
      },
      "required": ["tool"]
    },
    {
      "properties": {
        "strand": {
          "$ref": "./strand.yml"
        },
        "queryGeneticCode": {
          "$ref": "./gencode.yml"
        },
        "task": {
          "type": "string",
          "enum": ["blastx", "blastx-fast"]
        },
        "wordSize": {
          "type": "integer",
          "minimum": 2
        },
        "gapOpen": {
          "type": "integer"
        },
        "gapExtend": {
          "type": "integer"
        },
        "maxIntronLength": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "matrix": {
          "type": "string",
          "enum": [
            "BLOSUM45",
            "BLOSUM50",
            "BLOSUM62",
            "BLOSUM80",
            "BLOSUM90",
            "PAM30",
            "PAM70",
            "PAM250"
          ]
        },
        "compBasedStats": {
          "$ref": "./comp-based-stats.yml"
        },
        "seg": {
          "$ref": "./seg.yml"
        },
        "softMasking": {
          "type": "boolean",
          "default": false
        },
        "taxIds": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "negativeTaxIds": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "dbSoftMask": {
          "type": "string"
        },
        "dbHardMask": {
          "type": "string"
        },
        "cullingLimit": {
          "type": "integer",
          "minimum": 0
        },
        "bestHitOverhang": {
          "type": "number",
          "exclusiveMinimum": 0.0,
          "exclusiveMaximum": 0.5
        },
        "bestHitScoreEdge": {
          "type": "number",
          "exclusiveMinimum": 0.0,
          "exclusiveMaximum": 0.5
        },
        "subjectBestHit": {
          "type": "boolean",
          "default": false
        },
        "sumStats": {
          "type": "boolean"
        },
        "xDropGap": {
          "type": "number",
          "default": 30.0
        },
        "xDropGapFinal": {
          "type": "number",
          "default": 100.0
        },
        "ungapped": {
          "type": "boolean"
        },
        "windowSize": {
          "type": "integer",
          "default": 40
        },
        "useSWTraceback": {
          "type": "boolean"
        }
      }
    }
  ]
}
