#%RAML 1.0
title: Example JaxRS Container Service
version: v1.0.0
mediaType: application/json
uses:
  lib: docs/lib/library.raml
  err: docs/lib/errors.raml

securitySchemes:
  cookie-auth:
    description: Authentication based on a WDK auth cookie.
    type:
      x-custom
    describedBy:
      headers:
        Cookie:
          description: Auth_Key
          type: string


#
# Example Endpoints
#

/hello:
  displayName: Hello World
  get:
    responses:
      200:
        body:
          application/json:
            type: lib.HelloResponse
  post:
    securedBy: cookie-auth
    body:
      application/json:
        type: lib.HelloPostRequest
    responses:
      200:
        body:
          application/json:
            type: lib.HelloPostResponse
      401:
        body:
          application/json:
            type: err.UnauthorizedError
      500:
        body:
          application/json:
            type: err.ServerError
